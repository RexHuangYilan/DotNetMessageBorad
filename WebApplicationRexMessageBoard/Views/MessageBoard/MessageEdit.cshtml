@model WebApplicationRexMessageBoard.Models.MessageModels

@{
    ViewBag.Title = "MessageEdit";
}

@Styles.Render("~/Content/message-board")

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="bs-calltoaction bs-calltoaction-info">
            <div class="col">
                <div class="row cta-desc">
                    @Html.TextAreaFor(model => model.Content, new { @class = "rex-edit-textarea form-control", style = "height: 150px" })
                    @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                </div>
                <div class="row">
                    <div class="col-md-2 cta-button">
                        <input type="submit" value="確定修改" class="btn btn-lg btn-block btn-info" />
                    </div>

                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Details", new { id = ViewBag.MessageBoardID })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
